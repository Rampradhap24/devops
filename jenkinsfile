pipeline {
    agent any

    environment {
        IMAGE_NAME = "devops"
        CONTAINER_NAME = "devops-container"
        HOST_PORT = "5500"       // Browser access port
        CONTAINER_PORT = "80"    // Inside container (nginx default)
    }

    triggers {
        githubPush()  // Automatically run when code changes are pushed
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Rampradhap24/devops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üõ†Ô∏è Building Docker image..."
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Restart Container') {
            steps {
                script {
                    echo "‚ôªÔ∏è Restarting container on port ${HOST_PORT}..."
                    sh '''
                    if [ "$(docker ps -q -f name=$CONTAINER_NAME)" ]; then
                        docker stop $CONTAINER_NAME
                        docker rm $CONTAINER_NAME
                    fi
                    docker run -d -p ${HOST_PORT}:${CONTAINER_PORT} --name $CONTAINER_NAME $IMAGE_NAME
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful! Open: http://<jenkins-server-ip>:${HOST_PORT}"
        }
        failure {
            echo "‚ùå Deployment failed!"
        }
    }
}
