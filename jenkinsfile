pipeline {
    agent any

    environment {
        APP_NAME = "html-site"
        DOCKER_IMAGE = "html-site:latest"
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/Rampradhap24/devops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Run Docker Container') {
            steps {
                echo "Running container on port 5500..."
                sh '''
                docker rm -f $APP_NAME || true
                docker run -d -p 5500:80 --name $APP_NAME $DOCKER_IMAGE
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Static website running locally on http://localhost:5500"
        }
        failure {
            echo "❌ Build or run failed!"
        }
    }
}
