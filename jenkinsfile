pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/Rampradhap24/devops.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    docker.build("devops-app")
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    echo "Running container on port 5500..."
                    sh 'docker stop devops-container || true'
                    sh 'docker rm devops-container || true'
                    sh 'docker run -d -p 5500:5500 --name devops-container devops-app'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Application running successfully at http://localhost:5500"
        }
        failure {
            echo "❌ Build or container run failed. Check console output."
        }
    }
}
